{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Categories",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "short": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "series": {
      "type": "enumeration",
      "enum": [
        "Drakengard",
        "NieR",
        "YoRHa"
      ]
    },
    "titles": {
      "displayName": "Categories Title",
      "type": "component",
      "repeatable": true,
      "component": "translations.categories-title"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    }
  }
}

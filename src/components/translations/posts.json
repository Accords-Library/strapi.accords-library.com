{
  "collectionName": "components_translations_posts",
  "info": {
    "displayName": "Posts",
    "icon": "icons",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 150
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "body": {
      "type": "richtext"
    },
    "language": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::language.language"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Incomplete",
        "Draft",
        "Review",
        "Done"
      ],
      "default": "Incomplete",
      "required": true
    }
  }
}
